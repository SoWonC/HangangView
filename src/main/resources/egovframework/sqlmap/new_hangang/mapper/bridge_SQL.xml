<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.new_hangang.mapper.BridgeMapper">

    <!-- 예시: 전체 조회 -->
    <select id="selectAllBridges" resultType="egovframework.new_hangang.dto.BridgeDto">
        SELECT
            dmobscd,
            wlobscd,
            obsnm,
            addr,
            etcaddr,
            lon,
            lat,
            gdt,
            attwl,
            wrnwl,
            almwl,
            srswl,
            pfh,
            fstnyn
        FROM bridge_water_level
    </select>

    <select id="selectBridgesSeGy" resultType="egovframework.new_hangang.dto.BridgeDto">
        SELECT *
        FROM bridge_water_level
        where addr LIKE '%서울%'
           OR addr LIKE '%경기%';
    </select>

    <select id="findBridge" resultType="egovframework.new_hangang.dto.BridgeDto">
        SELECT *
        FROM bridge_water_level
        where wlobscd = #{wlobscd}
    </select>

</mapper>
